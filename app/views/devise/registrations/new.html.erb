<header class="app-header">
  <a href="<%= root_path %>" class="app-title-link">
    <p class="app-title">とっとく？</p>
  </a>
</header>

<main class="app-main" style="height: 100vh;, overflow-y: auto;">
  <div class="registar">
    <p class="subtitlemd">アカウントを作成</p>
    <p class="bodysm-s">必要な項目はすべて記入してください</p>
  </div>

  <% if resource.errors.any? %>
    <div class="error-flash closeable-error" id="error-flash">
      <button type="button" id="close-error" class="close-btn">×</button>
      <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |form| %>

    <div class="form-group">
      <%= form.label :name, "ユーザー名（必須）" %>
      <%= form.text_field :name, class: 'input-field', placeholder: 'ユーザー名を入力', autofocus: true %>
    </div>

    <div class="form-group">
      <%= form.label :email, "メールアドレス（必須）" %>
      <%= form.email_field :email, class: 'input-field', placeholder: 'メールアドレスを入力' %>
    </div>

    <div class="form-group">
      <%= form.label :password, "パスワード(必須・6文字以上)
      " %>
      <%= form.password_field :password, class: 'input-field', placeholder: 'パスワードを入力' %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, "パスワード（確認）" %>
      <%= form.password_field :password_confirmation, class: 'input-field', placeholder: 'パスワードを再入力してください' %>
    </div>

    <div class="btn-l">
      <%= form.submit "登録してはじめる", class: 'btn' %>
    </div>

    <p style="margin-bottom: 68px">
      <%= link_to "ログインはこちら", new_user_session_path %>
    </p>
  <% end %>
</main>

<footer class="app-footer">
  <p>© 2025 Tottoku</p>
</footer>